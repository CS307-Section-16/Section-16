<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" 
    android:id="@+id/dpad_layout">"
    
    
	<View
            android:id="@+id/d_anchor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" 
            android:layout_alignParentRight="true"/>


    <Button
        android:id="@+id/d_button1"
        android:layout_centerInParent="true"
		android:layout_toLeftOf="@+id/d_anchor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="startInitialization"
        android:text="New" 
        android:textSize="15sp" 
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/d_button2"
        android:layout_centerInParent="true"
		android:layout_toRightOf="@+id/d_anchor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="startContinue"
        android:text="Continue" 
        android:textSize="15sp" 
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/d_button3"
        android:layout_centerInParent="true"
		android:layout_below="@+id/d_button1"
		android:layout_toLeftOf="@+id/d_anchor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="startHighScores"
        android:text="High Scores"
        android:textSize="15sp" 
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/d_button4"
        android:layout_centerInParent="true"
		android:layout_below="@+id/d_button1"
		android:layout_toRightOf="@+id/d_anchor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="startSettings"
        android:text="Settings" 
        android:textSize="15sp" 
        android:textColor="@color/white"/>

</RelativeLayout>
